upstream <%= @name %> {
    # Path to Unicorn SOCK file, as defined previously
    server unix:<%= @socket_path %> fail_timeout=0;
}

server {

  listen <%= @port %>;
  server_name <%= @hostname %>;
  <% if @ssl == true %>
  ssl_certificate           <%= @ssl_certificate %>;
  ssl_certificate_key       <%= @ssl_certificate_key %>;

  ssl on;
  ssl_session_cache  builtin:1000  shared:SSL:10m;
  ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
  ssl_prefer_server_ciphers on;
  <% end %>

  access_log            /var/log/nginx/<%= @name %>.access.log;

  gzip_types    text/plain application/javascript application/x-javascript text/javascript text/xml text/css text/comma-separated-values image/svg+xml svg svgz application/json;

  # Application root, as defined previously
  root <%= @root_path %>;

  try_files $uri/index.html $uri @app;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= @name %>;
    proxy_connect_timeout <%= @timeout %>;
    proxy_send_timeout <%= @timeout %>;
    proxy_read_timeout <%= @timeout %>;
  }

  client_max_body_size 4G;
  keepalive_timeout <%= @timeout %>;
}
