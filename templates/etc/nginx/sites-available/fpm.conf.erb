<% if @maps %>
<%- @maps.each do |map| -%>
map   <%= map['nginx_var'] %> <%= map['mapping'] %> {
  <%- map['mapping_values'].each do |key, value| -%>
  <%= key %> <%= value %>
  <%- end -%>
}
<%- end -%>
<%- end -%>
map $http_x_forwarded_proto $xproto {
  default http;
  https https;
}
server {
  listen <%= @port %>;
  server_name <%= @name %> <% @server_aliases.each do |server_alias| -%><%= server_alias %> <% end -%>;
  server_name_in_redirect off;
  client_max_body_size <%= @client_max_body_size %>;

  <% if @ssl == true %>
  ssl_certificate           <%= @ssl_certificate %>;
  ssl_certificate_key       <%= @ssl_certificate_key %>;

  <% if @ssl_dh_param %>
  ssl_dhparam <%= @ssl_dh_param %>;
  <% end %>

  ssl on;
  ssl_session_cache  shared:SSL:10m;
  ssl_session_timeout  10m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers AES256+EECDH:AES256+EDH:AES128+EDH:!aNULL;
  <% end %>

  root <%= @root_path %>;

  access_log <%= @log_path %>/access.log;
  error_log <%= @log_path %>/error.log;

  index index.html index.php;

  location / {
    try_files $uri $uri/ /index.php?$args;
  }

  location ~ ^(.+\.php)(.*)$ {
    include fastcgi_params;

    fastcgi_pass 127.0.0.1:<%= @fpm_port %>;
    fastcgi_index index.php;
  <%- if @fast_cgi_params.empty? != true  -%>
  <%- @fast_cgi_params.sort_by {|key, value| key}.each do |key, value| -%>
      fastcgi_param <%= key %> "<%= value %>";
  <%- end -%>
  <%- end -%>
  }
  <%- @optional_lines.each do |optional_line| -%>
     <%= optional_line %>;
  <%- end -%>

  # gzip
  gzip on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";
  gzip_http_version 1.1;
  gzip_vary on;
  gzip_comp_level 6;
  gzip_proxied any;
  gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js ;
  gzip_buffers 16 8k;
}

server {
  listen 127.0.0.1:80;
  server_name localhost;

  root <%= @root_path %>;

  location ~ ^/(fpm_status|fpm_ping)$ {
    access_log off;
    allow 127.0.0.1;
    deny all;
    include fastcgi_params;
    fastcgi_pass 127.0.0.1:<%= @fpm_port %>;
  }

}
